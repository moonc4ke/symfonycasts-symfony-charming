{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9005,
            "hostname": "0.0.0.0",
            "pathMappings": {
                "/var/www/symfony": "${workspaceRoot}"
            },
            "log": true,
            "xdebugSettings": {
                "max_children": 100,
                "max_depth": 3
            }
        }
    ]
}